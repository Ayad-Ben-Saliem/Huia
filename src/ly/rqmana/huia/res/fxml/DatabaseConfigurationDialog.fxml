<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ly.rqmana.huia.java.controllers.DatabaseConfigurationDialogController">
    <stylesheets>
        <URL value="@../css/theme.css" />
        <URL value="@../css/templates.css" />
    </stylesheets>
    <VBox alignment="CENTER" spacing="32.0">
        <StackPane.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
        </StackPane.margin>
        <Label text="%DB_CONFIG" />
        <JFXTextField fx:id="dbServerHost" promptText="%DATABASE_SERVER_ADDRESS" />
        <JFXPasswordField fx:id="dbUsername" promptText="%DATABASE_USERNAME" />
        <JFXPasswordField fx:id="dbPassword" promptText="%DATABASE_PASSWORD" />
        <HBox alignment="CENTER" spacing="8.0">
            <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </VBox.margin>
            <JFXButton fx:id="okBtn" buttonType="RAISED" mnemonicParsing="false" onAction="#onOkBtnClicked" prefWidth="100.0" styleClass="common-button" text="%OK" />
            <JFXButton fx:id="cancelBtn" buttonType="RAISED" mnemonicParsing="false" onAction="#onCancelBtnClicked" prefWidth="100.0" styleClass="common-button" text="%CANCEL" />
        </HBox>
    </VBox>
</StackPane>
