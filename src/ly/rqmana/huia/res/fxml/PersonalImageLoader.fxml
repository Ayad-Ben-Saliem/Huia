<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ly.rqmana.huia.java.controllers.PersonalImageLoaderController">
   <center>
       <StackPane alignment="BOTTOM_CENTER">
           <ImageView fx:id="centralIV" fitHeight="480.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../images/person.png" />
           </ImageView>
         <JFXButton fx:id="tackPictureBtn" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" disable="true" mnemonicParsing="false" onAction="#tackPicture" styleClass="common-button" textAlignment="CENTER">
            <graphic>
               <FontAwesomeIconView fill="WHITE" glyphName="CAMERA" size="32" strokeType="OUTSIDE" strokeWidth="0.0" />
            </graphic>
            <StackPane.margin>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </StackPane.margin>
         </JFXButton>
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
       </StackPane>
   </center>
   <bottom>
       <VBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
           <BorderPane.margin>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
           </BorderPane.margin>
           <ScrollPane fitToWidth="true" vbarPolicy="NEVER">
               <HBox fx:id="picturesContainer" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="8.0">
                   <ImageView fx:id="leftIV" fitHeight="48.0" fitWidth="64.0" onMouseClicked="#selectIV" pickOnBounds="true" preserveRatio="true">
                       <Image url="@../images/person.png" />
                   </ImageView>
                   <ImageView fx:id="frontIV" fitHeight="48.0" fitWidth="64.0" onMouseClicked="#selectIV" pickOnBounds="true" preserveRatio="true">
                       <Image url="@../images/person.png" />
                   </ImageView>
                   <ImageView fx:id="rightIV" fitHeight="48.0" fitWidth="64.0" onMouseClicked="#selectIV" pickOnBounds="true" preserveRatio="true">
                       <Image url="@../images/person.png" />
                   </ImageView>
               </HBox>
           </ScrollPane>
           <HBox alignment="CENTER">
               <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#onOKBtnClicked" prefWidth="100.0" styleClass="common-button" text="%OK" />
               <Separator prefWidth="200.0" visible="false" />
               <JFXButton buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onAddPictureBtnClicked" styleClass="common-button" textAlignment="CENTER">
                   <graphic>
                       <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="32" strokeType="OUTSIDE" strokeWidth="0.0" />
                   </graphic>
               </JFXButton>
               <Separator prefWidth="200.0" visible="false" />
               <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#onCancelBtnClicked" prefWidth="100.0" styleClass="common-button" text="%CANCEL" />
           </HBox>
       </VBox>
   </bottom>
   <top>
       <HBox spacing="8.0" BorderPane.alignment="CENTER">
           <BorderPane.margin>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
           </BorderPane.margin>
           <JFXButton buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onRefreshWebcamClicked" prefHeight="47.0" prefWidth="47.0" styleClass="common-button" textAlignment="CENTER">
               <graphic>
                   <FontAwesomeIconView fill="WHITE" glyphName="REFRESH" size="32" strokeType="OUTSIDE" strokeWidth="0.0" />
               </graphic>
           </JFXButton>
           <ScrollPane fitToWidth="true" style="-fx-border-width: 0;" vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
               <HBox fx:id="webcamContainer" alignment="CENTER" spacing="8.0">
                   <JFXButton fx:id="defaultWebcamBtn" buttonType="RAISED" maxWidth="200.0" mnemonicParsing="false" styleClass="common-button" textAlignment="CENTER">
                       <graphic>
                           <FontAwesomeIconView fill="WHITE" glyphName="VIDEO_CAMERA" size="32" strokeType="OUTSIDE" strokeWidth="0.0" />
                       </graphic>
                   </JFXButton>
                   <Separator visible="false" HBox.hgrow="ALWAYS" />
               </HBox>
           </ScrollPane>
           <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#loadPicture" styleClass="common-button" text="%LOAD_PICTURE" textAlignment="CENTER">
               <graphic>
                   <FontAwesomeIconView fill="WHITE" glyphName="IMAGE" size="32" strokeType="OUTSIDE" strokeWidth="0.0" />
               </graphic>
           </JFXButton>
       </HBox>
   </top>
   <stylesheets>
      <URL value="@../css/theme.css" />
      <URL value="@../css/templates.css" />
   </stylesheets>
</BorderPane>
